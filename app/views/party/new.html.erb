<div class='new-party'>
  <div class='form-container text-center'>
    <%=form_for @party, :url =>'/party' do |f| %>
     <%= f.label :name %>
     <div class='inner-form'><%= f.text_field :name %></div>
     <h3> Enter Phone Number Below To Invite People</h3>
     <div id="dynamicInput">
        Phone Number<br><input type="text" name="ph_number">
     </div>
     <input type="button" value="+" onClick="addInput('dynamicInput');">
     <div class='inner-form'><%= f.submit 'Create Party', class: 'btn btn-primary text-uppercase color-black p-3' %></div>
     <% end %>
  </div>
</div>
