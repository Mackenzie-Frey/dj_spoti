<div class='invite'>
  <h2>Invite Party Animals to <%= current_party.name + 'Party' if current_party %> !</h2>
  <%= form_tag invite_path do %>
    <div id="dynamicInput">
      Phone Number<br><input type="text" name="ph_number">
    </div>
    <div class='inner-form'>
      <input type="button" value="+" onClick="addInput('dynamicInput');">
    </div>
    <div class='inner-form'>
      <%= submit_tag "Invite", class: 'btn btn-primary text-uppercase p-3' %>
    </div>
  <%end%>
</div>
